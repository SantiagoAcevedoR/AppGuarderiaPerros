<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".MatricularMascotaActivity">

        <EditText
            android:id="@+id/editTextNombreMascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de la mascota"
            android:inputType="text"/>

        <EditText
            android:id="@+id/editTextRazaMascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Raza de la mascota"
            android:inputType="text"/>

        <EditText
            android:id="@+id/editTextTamanoMascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="TamaÃ±o de la mascota"
            android:inputType="text"/>

        <Button
            android:id="@+id/buttonMatricular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Matricular mascota"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>